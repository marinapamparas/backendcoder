<style>
    body {
        background-color: #333;
    }

    .login-container {
        max-width: 360px;
        margin: auto;
        margin-top: 64px;
        padding: 32px;
        border-radius: 0.5em;
        color: #333;
        border: 1px solid #bbb;
        background-color: #ccc;
        text-align: center;
    }

    .a2 {
        color: #333;
    }

    .a2:hover {
        color: #000;
    }

    .containerbuttons{
        text-align: center;
        display: flex;
        flex-direction: column;
        justify-content: space-around;
    }
    .buttons{
        margin: 4%;
    }
</style>


<div class="login-container">
    <h1><b>Ecommerce</b></h1>
    <h2><b>Login de usuario</b></h2>

    <form action="/api/sessions/pplogin" method="post" style="margin-top: 32px;">
        <div class="input-group" style="width: 300px; margin-bottom: 32px;">
            <span class="input-group-text" id="group1"><i class="fa-solid fa-user"></i></span>
            <input type="email" name="email" class="form-control" placeholder="Nombre de usuario" required="required" autofocus="autofocus">
        </div>

        <div class="input-group" style="width: 300px; margin-bottom: 32px;">
            <span class="input-group-text" id="group2"><i class="fa-solid fa-lock"></i></span>
            <input type="password" name="password" placeholder="Contraseña" class="form-control" required="required">
        </div>

        {{#if showError}}
            <div class="alert alert-danger" role="alert" style="margin-top: 16px;">
                {{ errorMessage }}
            </div>
        {{/if}}

        <div class="containerbuttons">
            <button type="submit" class="btn btn-success buttons">Ingresar</button>
            

            <button class="btn btn-success submit_btn buttons" onclick="window.location.replace('/api/sessions/ghlogin')">Ingresa con tu cuenta de Github</button>
        </div>

        <div style="margin-top: 24px;">
            ¿No tenés cuenta? <a class="a2" href="/api/views/register">Registrate</a>
        </div>
    </form>
</div>
